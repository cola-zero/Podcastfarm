!!! html
%html
  %head
    %title Podcastfarm
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = javascript_include_tag "http://cdn.sublimevideo.net/js/uetyb0n0.js"
    = csrf_meta_tags
    -# <script type="text/javascript" src="http://cdn.sublimevideo.net/js/uetyb0n0.js"></script>
  %body
    %div.navbar
      %div.navbar-inner
        %div.container
          %a.brand Podcast Farm
          %ul.nav
            %li.active= link_to "Home", :root
          %ul{"class" => ["nav", "secondary-nav"]}
            - if signed_in?
              %li{"class" => "dropdown"}
                = link_to current_user_for_dropdown.html_safe, "/#", :class => "dropdown-toggle", "data-toggle" => "dropdown"
                %ul.dropdown-menu
                  %li= link_to "Sign Out", :signout
            - else
              %li= link_to "Sign in", "/auth/twitter"
    .contents
      %p#notice
        = notice
      %p#alert
        = alert
