!!! html
%html
  %head
    %title Podcastfarm
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %div.navbar
      %div.navbar-inner
        %div.container
          %a.brand Podcast Farm
          %ul.nav
            %li.active= link_to "Home", :root
            %li= link_to "Feeds", feeds_path
          %ul{"class" => ["nav", "secondary-nav"]}
            - if signed_in?
              %li{"class" => "dropdown"}
                = link_to current_user_for_dropdown.html_safe, "/#", :class => "dropdown-toggle", "data-toggle" => "dropdown"
                %ul.dropdown-menu
                  %li= link_to "Sign Out", :signout
            - else
              %li= link_to "Sign in", "/auth/twitter"
    .contents
      .container
        .row
          .alert-area{ :class => "span4 offset2" }
            - if flash[:notice]
              %p#notice.alert
                %a{:class => "close", "data-dismiss" => "alert"} x
                = flash[:notice]
            - if flash[:alert]
              %p#alert.alert
                %a{:class => "close", "data-dismiss" => "alert"} x
                = flash[:alert]
        = yield

